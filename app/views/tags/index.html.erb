<h1>Listing tags</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Xpos</th>
    <th>Ypos</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.content %></td>
    <td><%= tag.xpos %></td>
    <td><%= tag.ypos %></td>
    <td><%= tag.image_id %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

